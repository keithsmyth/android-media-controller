<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/app_icon_image_view"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_margin="16dp"
      android:contentDescription="@string/app_icon_desc"
      android:scaleType="fitCenter"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@mipmap/ic_launcher" />

  <TextView
      android:id="@+id/app_name_text_view"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:singleLine="true"
      android:textColor="@color/text_dark"
      android:textSize="@dimen/app_name_text_size"
      app:layout_constraintBottom_toTopOf="@id/package_name_text_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/app_icon_image_view"
      app:layout_constraintTop_toTopOf="@id/app_icon_image_view"
      tools:text="Media App" />

  <TextView
      android:id="@+id/package_name_text_view"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_small"
      android:layout_marginStart="8dp"
      android:ellipsize="middle"
      android:singleLine="true"
      android:textColor="@color/text_light"
      android:textSize="@dimen/app_package_text_size"
      app:layout_constraintBottom_toBottomOf="@id/app_icon_image_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/app_icon_image_view"
      app:layout_constraintTop_toBottomOf="@id/app_name_text_view"
      tools:text="com.example.mediaapp" />

  <ImageView
      android:id="@+id/media_browser_image_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:contentDescription="MediaBrowserService"
      android:src="@drawable/ic_media_browser"
      app:layout_constraintEnd_toStartOf="@+id/auto_image_view"
      app:layout_constraintStart_toEndOf="@+id/media_session_image_view"
      app:layout_constraintTop_toBottomOf="@id/app_icon_image_view" />

  <ImageView
      android:id="@+id/auto_image_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:contentDescription="Auto MediaBrowserService"
      android:src="@drawable/ic_auto"
      app:layout_constraintEnd_toStartOf="@+id/automotive_image_view"
      app:layout_constraintStart_toEndOf="@+id/media_browser_image_view"
      app:layout_constraintTop_toBottomOf="@id/app_icon_image_view" />

  <ImageView
      android:id="@+id/automotive_image_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:contentDescription="Automotive MediaBrowserService"
      android:src="@drawable/ic_automotive"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/auto_image_view"
      app:layout_constraintTop_toBottomOf="@id/app_icon_image_view" />

  <ImageView
      android:id="@+id/media_session_image_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:contentDescription="Active Media Session"
      android:src="@drawable/ic_media_session"
      app:layout_constraintEnd_toStartOf="@+id/media_browser_image_view"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/app_icon_image_view" />

  <Button
      android:id="@+id/app_control_button"
      style="@style/Widget.AppCompat.Button.Borderless.Colored"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:text="@string/app_control_button"
      app:layout_constraintEnd_toStartOf="@id/app_test_button"
      app:layout_constraintTop_toBottomOf="@id/media_session_image_view" />

  <Button
      android:id="@+id/app_test_button"
      style="@style/Widget.AppCompat.Button.Borderless.Colored"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:text="@string/app_test_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/media_session_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
